<%- include('partials/header'); -%>

    <div class="row   justify-content-center" style="height: 100vh;">
        <div class="col-10">
            <!-- Material form register -->
            <div class="card z-depth-2">
                <h2 class="card-header info-color white-text text-center py-4">
                    <div class="row justify-centent-center">
                        <div class="col">
                            <strong> Employee List</strong>
                        </div>
                    </div>
                    <div class="row justify-centent-center">
                        <div class="col">
                            <a href="/employee/add
                            "><button type="button" class="btn btn-elegant rounded-pill"><i class="fas fa-plus"></i> Add new </button></a>
                        </div>
                    </div>
                </h2>


                <!--Card content-->
                <div class="card-body px-lg-5 pt-0">

                    <!-- Form -->
                    <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th class="th-sm"><strong> Name </strong>
                                </th>
                                <th class="th-sm"><strong> Office</strong>
                                </th>
                                <th class="th-sm"><strong> Age</strong>
                                </th>
                                <th class="th-sm"><strong>Start date</strong>
                                </th>
                                <th class="th-sm"><strong>Salary</strong>
                                </th>
                                <th class="th-sm"><strong> Phone Number</strong>
                                </th>
                                <th class="th-sm"><strong>E-Mail</strong>
                                </th>
                                <th class="th-sm">
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% tableData.forEach(obj=>{ %>
                                <%  console.log(obj) %>
                                    <%  const name = obj.firstName + " " + obj.lastName %>
                                        <tr>
                                            <td>
                                                <%= name %>
                                            </td>
                                            <td>
                                                <%= obj.office %>
                                            </td>
                                            <td>
                                                <%= obj.age %>
                                            </td>
                                            <td>
                                                <%= obj.startingDate %>
                                            </td>
                                            <td>
                                                <%= "$" %>
                                                    <%= obj.salary %>
                                            </td>
                                            <td>
                                                <%= obj.email %>
                                            </td>
                                            <td>
                                                <%= obj.phoneNumber %>
                                            </td>
                                            <td>
                                                <div class="row justify-content-center">
                                                    <div class="col-2">
                                                        <a href="/employee/edit/<%= obj._id %>">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                    </div>
                                                    <div class="col-2">
                                                        <a data-toggle="modal" data-target="#basicExampleModal">
                                                            <i class="far fa-trash-alt"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        <div class="modal fade" id="basicExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                    </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Are You Sure You Want To Delete ?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                        <a href="/employee/delete/<%= obj._id %>"> <button type="button" class="btn btn-primary">Delete</button></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% })%>
                        </tbody>
                    </table>
                    <!-- Form -->

                </div>

            </div>
            <!-- Material form register -->
        </div>
    </div>
    <div class="container">

    </div>
    <%- include('partials/footer'); -%>